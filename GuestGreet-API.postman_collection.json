    {
      "name": "Customer Management",
      "item": [
        {
          "name": "Enroll Customer with Face",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "displayName",
                  "value": "Alex",
                  "type": "text"
                },
                {
                  "key": "consentGiven",
                  "value": "true",
                  "type": "text"
                },
                {
                  "key": "branchId",
                  "value": "branch-001",
                  "type": "text"
                },
                {
                  "key": "profileImage",
                  "type": "file",
                  "src": "",
                  "description": "Upload a JPG/PNG image with a single face"
                }
              ]
            },
            "url": {
              "raw": "http://localhost:3000/customers/enroll",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["customers", "enroll"]
            }
          },
          "response": []
        },
        {
