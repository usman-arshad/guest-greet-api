    {
      "name": "Face Recognition",
      "item": [
        {
          "name": "Identify from Frame (Base64)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"imageBase64\": \"<YOUR_BASE64_ENCODED_IMAGE>\",\n  \"cameraId\": \"lobby-cam-01\",\n  \"branchId\": \"branch-001\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/recognition/identify-frame",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["recognition", "identify-frame"]
            }
          },
          "response": []
        },
        {
          "name": "Identify from Embedding",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"embedding\": [0.123, -0.456, 0.789],\n  \"cameraId\": \"lobby-cam-01\",\n  \"branchId\": \"branch-001\",\n  \"threshold\": 0.75\n}"
            },
            "url": {
              "raw": "http://localhost:3000/recognition/identify",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["recognition", "identify"]
            }
          },
          "response": []
        },
        {
          "name": "Get Recognition Logs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:3000/recognition/logs?limit=50",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["recognition", "logs"],
              "query": [
                {
                  "key": "limit",
                  "value": "50"
                },
                {
                  "key": "branchId",
                  "value": "branch-001",
                  "disabled": true
                },
                {
                  "key": "cameraId",
                  "value": "lobby-cam-01",
                  "disabled": true
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Enable Recognition",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"enabled\": true\n}"
            },
            "url": {
              "raw": "http://localhost:3000/recognition/toggle",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["recognition", "toggle"]
            }
          },
          "response": []
        },
        {
          "name": "Disable Recognition",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"enabled\": false\n}"
            },
            "url": {
              "raw": "http://localhost:3000/recognition/toggle",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["recognition", "toggle"]
            }
          },
          "response": []
        }
      ]
