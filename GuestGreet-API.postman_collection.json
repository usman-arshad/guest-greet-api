          },
          "response": []
        },
        {
          "name": "Update Customer",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"displayName\": \"Alexander\",\n  \"isActive\": true\n}"
            },
            "url": {
              "raw": "http://localhost:3000/customers/{{customerId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["customers", "{{customerId}}"]
            }
          },
          "response": []
        },
        {
          "name": "Update Profile Image",
          "request": {
            "method": "PUT",
